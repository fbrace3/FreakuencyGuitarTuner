<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StandardTuner"
    >

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:paddingTop="25dp"
        android:text="Freakuency Tuner"
        android:textSize="24sp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="32dp"
        android:textColor="@color/white"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/upArrow"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_below="@id/titleText"
        android:layout_centerHorizontal="true"
        android:src="@drawable/angle_circle_up_icon"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="20dp"/>

    <TextView
        android:id="@+id/standardTunerNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/upArrow"
        android:layout_centerHorizontal="true"
        android:text=""
        android:textSize="40sp"
        android:textColor="@color/material_dynamic_neutral99"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        />

    <ImageView
        android:id="@+id/downArrow"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:layout_below="@id/standardTunerNote"
        android:layout_centerHorizontal="true"
        android:src="@drawable/angle_circle_down_icon"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="0dp"/>

    <Button
        android:id="@+id/startButton"
        android:layout_width="200dp"
        android:layout_height="50sp"
        android:layout_below="@id/downArrow"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp"
        android:paddingRight="10sp"
        android:text="Start" />

    <Button
        android:id="@+id/stopButton"
        android:layout_width="200dp"
        android:layout_height="50sp"
        android:layout_below="@id/downArrow"
        android:layout_toEndOf="@id/startButton"
        android:layout_marginTop="32dp"
        android:paddingLeft="0sp"
        android:text="Stop" />

    <Button
        android:id="@+id/menuButton"
        android:layout_width="200dp"
        android:layout_height="50sp"
        android:layout_below="@id/stopButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20sp"
        android:text="Menu" />

</RelativeLayout>
