            android:background="@android:color/white" />

        <View
            android:layout_width="2dp"
            android:layout_height="200dp"
            android:background="#000000" />

        <Button
            android:id="@+id/btnA"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:background="@android:color/white" />

        <View
            android:layout_width="2dp"
            android:layout_height="200dp"
            android:background="#000000" />

        <Button
            android:id="@+id/btnB"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:background="@android:color/white" />

    </LinearLayout>

</LinearLayout>
