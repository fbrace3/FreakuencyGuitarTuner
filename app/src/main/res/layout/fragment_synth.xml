<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <TextView
        android:id="@+id/synth_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/synth_heading"
        android:textSize="24sp"
        android:layout_marginTop="80dp"
        android:textColor="@color/material_dynamic_neutral99"
        android:gravity="center"
        tools:text="Freakuency Synth"
        />
    <!-- Black Keys -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="-40dp">

<!--        <TextView-->
<!--            android:id="@+id/synth_heading"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Synth"-->
<!--            android:textSize="24sp"-->
<!--            android:layout_marginTop="0dp"-->
<!--            />-->

        <Button
            android:id="@+id/btnCSharp"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_weight="0.1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/black"
            />

        <Button
            android:id="@+id/btnDSharp"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_weight="0.1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/black" />

        <Button
            android:id="@+id/btnFSharp"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_weight="0.1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/black" />

        <Button
            android:id="@+id/btnGSharp"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_weight="0.1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@android:color/black" />

        <Button
            android:id="@+id/btnASharp"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:layout_weight="0.1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/black" />

    </LinearLayout>

    <!-- White Keys -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_marginTop="-40dp">

        <Button
            android:id="@+id/btnC"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:background="@android:color/white" />

        <View
            android:layout_width="2dp"
            android:layout_height="200dp"
            android:background="#000000" />

        <Button
            android:id="@+id/btnD"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:background="@android:color/white" />

        <View
            android:layout_width="2dp"
            android:layout_height="200dp"
            android:background="#000000" />

        <Button
            android:id="@+id/btnE"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:background="@android:color/white" />

        <View
            android:layout_width="2dp"
            android:layout_height="200dp"
            android:background="#000000" />

        <Button
            android:id="@+id/btnF"
            android:layout_width="0dp"
            android:layout_height="200dp"
            android:layout_weight="1"
            android:background="@android:color/white" />

        <View
            android:layout_width="2dp"
